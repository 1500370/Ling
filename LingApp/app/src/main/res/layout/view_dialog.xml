<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:background="@drawable/bg_dialog_title"
            android:gravity="center"
            android:text="title"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/v_head_div"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/pink_light" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="message"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/v_content_div"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/transparent" />

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:gravity="center">

            <Button
                android:id="@+id/btn_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_left_btn"
                android:text="No"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/v_btn_div"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/pink_light"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_right_btn"
                android:text="Yes"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>